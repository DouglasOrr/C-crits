{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    // Defaults from `npx tsc --init`
    "target": "es2016",
    "module": "Preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  }
}
